{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": false,
    "paths": {
      "@features/*": ["./src/features/*"],
      "@db-models/*": ["./src/database/models/*"],
      "@common/*": ["./src/common/*"]
    }
  }
}
